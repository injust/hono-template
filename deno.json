{
    "compilerOptions": {
        "jsx": "precompile",
        "jsxImportSource": "hono/jsx"
    },
    "fmt": {
        "indentWidth": 4,
        "semiColons": false,
        "singleQuote": true
    },
    "imports": {
        "hono": "jsr:@hono/hono@^4.10.1"
    },
    "lock": false,
    "tasks": {
        "check": "deno fmt --check && deno lint && deno check .",
        "start": "deno run --allow-net main.ts"
    }
}
